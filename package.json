{
  "name": "airhost-backend",
  "version": "1.0.0",
  "description": "Backend completo para AirHost Assistant - Sistema de automatizaciÃ³n de Airbnb",
  "main": "backend/server.js",
  "scripts": {
    "start": "node backend/server.js",
    "dev": "nodemon backend/server.js",
    "build": "npm run optimize:assets && npm run db:generate && echo 'Build completed successfully'",
    "build:fast": "npx prisma generate --no-engine",
    "build:production": "NODE_ENV=production npm run build && npm run optimize:full",
    "db:migrate": "npx prisma migrate dev",
    "db:generate": "npx prisma generate",
    "db:studio": "npx prisma studio",
    "optimize:assets": "node optimize-build.js",
    "optimize:full": "npm run optimize:assets && npm run clean:cache",
    "prebuild": "echo 'Starting build process...'",
    "postbuild": "echo 'Build optimization completed'",
    "test": "echo 'Tests coming soon'",
    "clean": "rm -rf node_modules/.cache && npm cache clean --force",
    "clean:cache": "rm -rf backend/node_modules/.cache || true"
  },
  "keywords": [
    "airbnb",
    "automation",
    "property-management",
    "channel-manager",
    "smart-locks",
    "vacation-rental"
  ],
  "author": "AirHost Team",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^6.14.0",
    "axios": "^1.5.0",
    "bcryptjs": "^2.4.3",
    "cloudinary": "^1.40.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.0.0",
    "ical": "^0.8.0",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.29.4",
    "node-cron": "^3.0.2",
    "nodemailer": "^6.9.7",
    "stripe": "^13.11.0",
    "twilio": "^4.16.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "prisma": "^6.14.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Trakaleh/airhost-backend.git"
  },
  "bugs": {
    "url": "https://github.com/Trakaleh/airhost-backend/issues"
  },
  "homepage": "https://github.com/Trakaleh/airhost-backend#readme"
}
